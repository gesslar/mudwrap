{
    "name": "MUDwrap",
    "version": "1.0.0",
    "description": "A text wrapping utility for MUD players.",
    "permissions": [ "activeTab", "storage" ],
    "background": {
        "scripts": ["src/scripts/background.js"],
        "persistent": false
    },
    "options_page" : "src/options.html",
    "browser_action" : {
        "default_popup": "src/popup.html",
        "default_icon": {
            "16" : "src/images/get_started16.png",
            "32" : "src/images/get_started32.png",
            "48" : "src/images/get_started48.png",
            "128": "src/images/get_started128.png"
        }
    },
    "icons": {
        "16" : "src/images/get_started16.png",
        "32" : "src/images/get_started32.png",
        "48" : "src/images/get_started48.png",
        "128": "src/images/get_started128.png"
    },
    "manifest_version": 2
}
